<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#98ea79" />
            <stroke
                android:width="1dp"
                android:color="#69c948" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#98ea79"
                android:endColor="#69c948"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#69c948" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>